{
  "compilerOptions": {                   
    "outDir": "build",                          
    "rootDir": "src",
    "noImplicitAny": true,
    "resolveJsonModule": true,

    "esModuleInterop": true,
    "lib": ["es2020", "dom"],
    "module": "es2022",
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "target": "es2022",
    "types": ["node"],

  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}