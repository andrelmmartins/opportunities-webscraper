{
  "compilerOptions": {                   
    "outDir": "build",                          
    "rootDir": "src",
    "noImplicitAny": true,
    "resolveJsonModule": true,

    "esModuleInterop": true,
    "lib": ["ES6", "dom"],
    "module": "CommonJS",
    "preserveConstEnums": true,
    "strict": true,
    "sourceMap": true,
    "target": "ES6",

  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}